<html lang="en">
<head>
    <title>✨Guess My Word✨</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-image: url('https://wallpapercave.com/wp/wp9735904.jpg');
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat;
        }
        .container {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.9); 
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        h1 {
            color: #1e76e9;
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        p {
            font-size: 1.2em;
            color: #333;
        }
        input {
            padding: 10px;
            font-size: 1em;
            border: 2px solid #1e76e9;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        button {
            padding: 10px 20px;
            font-size: 1em;
            color: #fff;
            background-color: #1e76e9;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #1b83d8;
        }
        #message {
            margin-top: 15px;
            font-size: 1.2em;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Guess My Word</h1>
        <p id="wordDisplay">_ _ _ _</p>
        <input type="text" id="guessInput" maxlength="1" placeholder="Enter a letter">
        <button onclick="makeGuess()">Guess</button>
        <p id="message"></p>
    </div>

    <script>
        
        const secretWord = ["g", "e", "n", "s","h","i","n"];
        let guessedWord = ["_", "_", "_", "_","_","_","_",];

        
        document.getElementById("wordDisplay").textContent = guessedWord.join(" ");

        function makeGuess() {
            const guessInput = document.getElementById("guessInput");
            const guess = guessInput.value.toLowerCase(); 
            let correct = false;

            
            for (let i = 0; i < secretWord.length; i++) {
                if (secretWord[i] === guess) {
                    guessedWord[i] = guess; 
                    correct = true;
                }
            }

            
            document.getElementById("wordDisplay").textContent = guessedWord.join(" ");

            
            if (correct) {
                document.getElementById("message").textContent = "✅ Correct guess!";
            } else {
                document.getElementById("message").textContent = "❌ Incorrect guess. Try again!";
            }

            
            guessInput.value = "";

            
            if (!guessedWord.includes("_")) {
                document.getElementById("message").textContent = "🎉 Congratulations! You guessed the word!";
            }
        }
    </script>
</body>
</html>
